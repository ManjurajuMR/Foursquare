<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_copy"
    tools:context=".authentication.SigninFragment">

 <TextView
     android:id="@+id/skip"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Skip"
     android:textSize="24sp"
     android:layout_toLeftOf="@+id/skip_icon"
     android:textColor="@color/white"
     android:fontFamily="@font/avenir_book"
     android:layout_marginTop="10dp"
     android:layout_marginEnd="10dp"/>

 <TextView
     android:id="@+id/skip_icon"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginEnd="30dp"
     android:layout_alignParentRight="true"
     android:layout_marginTop="10dp"
     android:text=">"
     android:textSize="24sp"
     android:fontFamily="@font/avenir_book"
     android:textColor="@color/white"/>

 <ImageView
     android:id="@+id/logo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="100dp"
     android:layout_centerHorizontal="true"
     android:src="@drawable/logo"/>

 <TextView
     android:id="@+id/txt_email"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="EMail"
     android:textSize="20sp"
     android:textColor="#b5abab"
     android:fontFamily="@font/avenir_book"
     android:layout_below="@+id/logo"
     android:layout_marginTop="60dp"
     android:layout_centerHorizontal="true"/>

 <EditText
     android:id="@+id/input_email"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginStart="30dp"
     android:layout_marginEnd="30dp"
     android:layout_below="@+id/txt_email"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="2dp"
     android:paddingBottom="20dp"
     android:inputType="textPersonName"
     android:textColorHint="@color/white"
     android:gravity="center"
     android:textColor="@color/white"
     android:textSize="24sp"
     android:fontFamily="@font/avenir_book"
     android:backgroundTint="#b5abab"/>

 <TextView
     android:id="@+id/txt_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Password"
     android:textSize="20sp"
     android:textColor="#b5abab"
     android:fontFamily="@font/avenir_book"
     android:layout_below="@+id/input_email"
     android:layout_marginTop="5dp"
     android:layout_centerHorizontal="true"/>

 <EditText
     android:id="@+id/input_password"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginStart="30dp"
     android:layout_marginEnd="30dp"
     android:layout_below="@+id/txt_password"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="2dp"
     android:paddingBottom="20dp"
     android:textColorHint="@color/white"
     android:gravity="center"
     android:textColor="@color/white"
     android:textSize="24sp"
     android:inputType="textPassword"
     android:maxLength="8"
     android:backgroundTint="#b5abab"/>

 <TextView
     android:id="@+id/forgot_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Forgot Password?"
     android:textSize="20sp"
     android:textColor="#b5abab"
     android:fontFamily="@font/avenir_book"
     android:layout_below="@+id/input_password"
     android:layout_marginTop="20sp"
     android:layout_centerHorizontal="true"
     android:clickable="true"
     android:focusable="true" />

<TextView
    android:id="@+id/login_btn"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Login"
    android:layout_below="@id/forgot_password"
    android:layout_marginTop="40dp"
    android:textColor="@color/white"
    android:fontFamily="@font/avenir_book"
    android:textSize="28sp"
    android:gravity="center"
    android:background="@drawable/login_background_design"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"/>

 <TextView
     android:id="@+id/create_account"
     android:layout_width="wrap_content"
     android:text="Create Account"
     android:textSize="24sp"
     android:textColor="@color/white"
     android:fontFamily="@font/avenir_book"
     android:textAlignment="center"
     android:layout_height="wrap_content"
     android:layout_below="@+id/login_btn"
     android:layout_marginTop="25dp"
     android:layout_centerHorizontal="true"
     android:clickable="true"
     android:focusable="true" />

 <TextView
     android:id="@+id/or_txt"
     android:background="@drawable/round_background_design"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:elevation="5dp"
     android:text="OR"
     android:fontFamily="@font/avenir_light"
     android:textSize="20sp"
     android:textColor="@color/white"
     android:gravity="center"
     android:layout_below="@+id/create_account"
     android:layout_marginTop="15dp"
     android:layout_centerHorizontal="true"/>

 <LinearLayout
     android:layout_width="350dp"
     android:layout_centerHorizontal="true"
     android:orientation="horizontal"
     android:layout_marginTop="20sp"
     android:layout_height="wrap_content"
     android:layout_below="@+id/or_txt"
     android:weightSum="1">

 <ImageView
     android:id="@+id/facebook_icon"
     android:layout_width="0dp"
     android:layout_weight="0.5"
     android:layout_height="wrap_content"
     android:layout_marginRight="10dp"
     android:src="@drawable/facebook_btn"/>

  <ImageView
      android:id="@+id/google_icon"
      android:layout_width="0dp"
      android:layout_weight="0.5"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:src="@drawable/g__btn"/>

 </LinearLayout>
</RelativeLayout>